  #custom-announcement-bar {
    width: 80vw;
  }
  .flickity-viewport {
    width: 100%;
  }
  .announcement-bar__message {
    width: 80vw;
    height: 25px;
    line-height: 25px;
  }
}
.flickity-button svg {
   height: 10px !important;
}

.flickity-button{
  background: transparent!important;
  color: white!important;
}
 
.flickity-enabled.is-draggable {
  z-index:5;
  position: relative;
  margin: 0 auto;
  box-sizing: border-box;
}
 
