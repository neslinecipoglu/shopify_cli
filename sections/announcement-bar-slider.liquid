<style>

.announcement-bar__message .text1 .is-selected{
    display: flex;
    justify-content: center;
    height: auto!important;
    flex-direction: row;
    align-items: center;
    padding: 0px!important;
}
  
.announcement-bar {
  height: 100%
}
#custom-announcement-bar {
  margin: auto;
  width: 40vw;
  height: 26px;
  font-size: 16px;
  line-height: 26px;
}
.announcement-bar-slider {
  background-color: {{ section.settings.announcement_bar_color }};
  text-align: center;
  text-decoration: none;
}
.flickity-viewport {
  margin: auto;
  width: 100%;
}
.announcement-bar__message {
  width: 40vw;
  font-weight: 600;
}
